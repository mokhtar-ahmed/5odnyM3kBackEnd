<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3308/carpooling?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="pojos/Comment.hbm.xml"/>
    <mapping resource="pojos/UserStatue.hbm.xml"/>
    <mapping resource="pojos/EventToLocation.hbm.xml"/>
    <mapping resource="pojos/Notification.hbm.xml"/>
    <mapping resource="pojos/Phone.hbm.xml"/>
    <mapping resource="pojos/Circle.hbm.xml"/>
    <mapping resource="pojos/User.hbm.xml"/>
    <mapping resource="pojos/Event.hbm.xml"/>
    <mapping resource="pojos/Location.hbm.xml"/>
    <mapping resource="pojos/JoinEvent.hbm.xml"/>
    <mapping resource="pojos/ExistIn.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
